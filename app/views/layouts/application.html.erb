<!DOCTYPE html>
<html>
  <head>
    <title>Day Rider</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    
    
    <ul>
      
      <% if @current_renter %>
      <li><%= link_to "Profile Page", renter_path(@current_renter.id) %></li>
      <li><%= link_to 'Bikes Home', bikes_path %></li>
      <li><%= link_to 'Shops Home', shops_path %></li>
        <li class='right'>Welcome <%= @current_renter.name %> </li>
        <li class='right'><%= link_to 'Log Out', logout_path, method: :delete %></li>
      <% else %>
      <li><%= link_to "Home", root_path %></li>
      <li><%= link_to 'Renters Home', renters_path %></li>
      <li><%= link_to 'Bikes Home', bikes_path %></li>
      <li><%= link_to 'Shops Home', shops_path %></li>
        <li class='right'><%= link_to 'Sign up', new_renter_path %></li>
        <li class='right'><%= link_to 'Log in', new_login_path %></li>
      <% end %>
    </ul>
    <%= yield %>
  </body>
</html>




