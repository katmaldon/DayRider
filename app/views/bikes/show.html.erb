<h1> Bike Details </h1>
<div>
<% if flash[:my_errors]%>
  <%flash[:my_errors].each do |error| %>
  <h3><% error %></h3>
  <%end%>
<%end%>

<% if flash[:success]%>

    <h2><%flash[:succes]%></h2>
<%end%>


<br>
<h2><%= "Brand: #{@bike.model}, size: #{@bike.size}"%></h2>
<p><%= "Type: #{@bike.bike_type}" %></p>
<br><br>

<img src=<%=@bike.bike_img%> alt="Bike image" width="30%" height="30%">

<h3>Rating: <%= @bike.average_rating %></h3>


<h4> <%= button_to 'Reserve this bike', rentals_path, method: :post%></h4>
<br><br>
<h4><%= link_to "Back to all bikes", bikes_path %></h4>





